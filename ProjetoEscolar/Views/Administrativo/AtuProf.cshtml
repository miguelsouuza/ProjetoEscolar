@{
    ViewBag.Title = "Atualizar";
}

<h2>Atualizar Dados</h2>

@using (Html.BeginForm("AtuProf", "Administrativo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label>Professores</label>
    <br />
    @Html.DropDownList("professor", "Escolha o professor")
    <br />
    <label>Nome do Professor</label>
    <br />
    <input type="text" id="txtNmProf" name="txtNmProf" />
    <br />
    <br />
    <input type="submit" value="Atualizar" />
    <br />
    @ViewBag.Messagem
}

@Html.ActionLink("Voltar", "index", "Administrativo")